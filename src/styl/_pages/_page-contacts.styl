.sect__contacts
	padding 40px 0 100px
	
	.page-title
		margin-bottom 30px
		
.contacts-form
	max-width 310px
	
	&__col
		max-width 380px
		padding-top 75px
		
	&__text
		margin-top 70px
		text-transform uppercase
		font 20px $BisonBold
		p
			margin-bottom 30px
			&:last-child
				margin-bottom 0
				
		a
			color inherit
			&:hover
				color $accent-color
				
		h2,h3,h4,h5,h6
			font 26px $Adelina 
			margin-bottom 30px
			text-transform none
			

	.btn
		margin-top 20px
		


.contacts-img
	position relative
	margin 0 auto
	max-width 460px
	z-index 1
	&:before
		pseudo()
		position absolute
		position-center()
		z-index -1
		width 540px
		height 530px
		background url('../img/decors/contacts-decor.svg') no-repeat / contain
	&__col
	
		flex 1
		padding-left 20px
		padding-right 20px