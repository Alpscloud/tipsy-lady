.page-about
	
	.content
		max-width 640px
		margin 0 auto
		
.sect__about-text
	padding-top 150px
	&--top
		background url('../img/backgrounds/about-bg-top.png') top -90px left no-repeat
		padding-bottom 50px
	&--bottom
		background url('../img/backgrounds/about-bg-bottom.jpg') top 80px right no-repeat / 660px

.about__title
	margin-bottom 75px
	font-size 140px
	

.sect__our-drinks-imgs
	position relative
	z-index 2
	
	.aqua-decor__line--top
		z-index -1


.our-drinks-imgs
	height 670px
	position relative
	img
		display block
	&__woman
		position absolute
		bottom 0
		left 0
		width 550px
		

	&__jars
		position absolute
		width 610px
		height 610px
		z-index 4
		right 0
		bottom 0
		display flex
		flex-wrap nowrap
		justify-content space-between
		align-items flex-end
		img
			width 200px
			flex none
			transition all .23s ease-in-out
			&:nth-child(2)
				margin-bottom 60px
			&:nth-child(3)
				margin-bottom 120px