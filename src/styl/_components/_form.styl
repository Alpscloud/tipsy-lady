input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)




.form
	&-input
		display block
		width 100%
		padding 20px 10px
		text-align left
		background-color transparent
		border-bottom 1px solid $basic-black-color
		font 20px $BisonBold
		color $basic-black-color
		text-transform uppercase
		&:hover,
		&:focus
			border-color $accent-color
		&::-webkit-input-placeholder
			font 20px $BisonBold
			color $placeholder-color
		&::-moz-placeholder
			font 20px $BisonBold
			color $placeholder-color
		&:-moz-placeholder
			font 20px $BisonBold
			color $placeholder-color
		&:-ms-input-placeholder
			font 20px $BisonBold
			color $placeholder-color
			
		&.is-error
			border-color red
			
	&-group
		position relative
		margin-bottom 25px
		&:last-child
			margin-bottom 0
			
		&__label
			display block
			position relative
			
			&.is-error
				.form
					&-input
						border-color $cherry-color
					&-group
						&__error
							opacity 1
							visibility visible
						&__label--text
							top 0
							font-size 12px
							color $cherry-color
							
			&.is-active
				.form-group__label--text
					top 0
					color $accent-color
					font-size 12px
			
			&--text
				display block
				font 20px $BisonBold
				color $placeholder-color
				transition all .17s ease-in-out
				position absolute
				left 10px
				top 22px
				transition all .17s ease-in-out
				
		&__error
			display block
			position absolute
			left 10px
			top 23px
			color $cherry-color
			font 18px $BisonBold
			transition all .17s ease-in-out
			pointer-events none
			opacity 0
			visibility hidden
			
	&-textarea
		min-height 200px
	



.form
	&-checkbox
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 2px
			width 16px
			height 16px
			border 1px solid $text-color
			background-position 50% 50%
			background-repeat no-repeat
			background-size 12px 12px
			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:before
							background-color $text-color
							background-image url('../img/icons/svg/checkbox-ic.svg')
							
.form
	&-radio
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 50%
			width 16px
			height 16px
			border 1px solid $text-color
		&:after
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 2px
			top 2px
			width 12px
			height 12px
			border-radius 50%
			background-color $text-color
			display none
			

			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:after
							display block


