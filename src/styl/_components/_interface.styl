.socials
	font-size 0
	white-space nowrap
	display flex
	flex-wrap nowrap
	align-items flex-start
	&-item
		display inline-block
		margin-right 10px
		&:last-child
			margin-right 0
			
		&__link
			display block
			width 56px
			height 68px
			background rgb(241,211,15)
			background -moz-linear-gradient(180deg, #ff950a 30%, #fcd40d 100%)
			background -webkit-linear-gradient(180deg, #ff950a 30%, #fcd40d 100%)
			background linear-gradient(180deg, #ff950a 30%, #fcd40d 100%)
			position relative
			clip-path polygon(0 0, 100% 0, 100% 100%, 0 84%)
			&--ic
				display inline-block
				position absolute
				position-center()
				background-position 50% 50%
				background-repeat no-repeat
				background-size contain
				width 20px
				height 20px
				transition all .17s ease-in-out
				
			&:hover
				height 75px
				span
					opacity .5
					

.accent-heading
	text-align center
	display inline-flex
	align-items center
	align-items center
	justify-content center
	text-transform uppercase
	background-color $accent-color
	color $basic-white-color
	text-shadow 2px 2px 2px rgba($basic-black-color, .19)
	line-height 1
	font 28px $BisonBold
	padding 5px 34px
	&__ic
		flex-col-center()
		width 35px
		height 35px
		background-color #eaa400
		background-position 50% 50%
		background-repeat no-repeat
		background-size 20px 20px
		flex none
		margin-left 14px
		img
			width 20px
			height 20px
			filter drop-shadow(2px 2px 2px rgba($basic-black-color, .19))

.aqua-decor
	bg(50%, 50%)
	background-image url('../img/backgrounds/drinks-bg.jpg')
	position relative
	
	&__line
		position absolute
		width 100%
		left 0
		z-index 1
		pointer-events none
		img
			display block
			width 100%
		&--top
			top -2px
			z-index 1
		&--bottom
			bottom -2px
			z-index 3
			
.grey-decor-bg
	background url('../img/backgrounds/grey-decor-bg.svg') top center no-repeat / cover
.product-bg
	background url('../img/backgrounds/product-bg.jpg') top 200px center no-repeat / 100% auto

.age-checker
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 1000
	flex-col-center()
	padding 40px
	
	&__title
		text-transform uppercase
		text-align center
		font 80px $BisonBold
		line-height 1
		margin-bottom 130px
		position relative
		z-index 1
		&:before
			pseudo()
			position absolute
			position-center()
			width 277px
			height 318px
			background url('../img/21.svg') 50% 50% no-repeat / contain
			z-index -1
			margin-top -20px
			
	&__btns
		.btn
			margin-right 30px
			&:last-child
				margin-right 0
				

